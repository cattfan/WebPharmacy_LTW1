@model Thuoc
@{
    ViewData["Title"] = Model.TenThuoc;
}

<div class="row mt-5">
    <div class="col-md-5">
        <img class="img-fluid rounded" src="@Model.HinhAnhUrl" alt="@Model.TenThuoc" onerror="this.onerror=null;this.src='https://placehold.co/600x700/28a745/white?text=Image+Not+Found';">
    </div>
    <div class="col-md-7">
        <h1 class="display-5">@Model.TenThuoc</h1>
        <h4><span class="badge bg-secondary">@Model.LoaiThuoc.TenLoai</span></h4>
        <h2 class="text-success my-3">@Model.Gia.ToString("N0") VNĐ</h2>

        <p class="lead">@Model.MoTa</p>

        <div class="d-grid gap-2 col-6">
            <a class="btn btn-primary btn-lg" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-id="@Model.Id">
                <i class="bi bi-cart-plus"></i>
                Thêm vào giỏ hàng
            </a>
        </div>
    </div>
</div>
