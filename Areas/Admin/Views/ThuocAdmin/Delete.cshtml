@model WebPharmacy.Models.Thuoc

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <h4>Thuốc</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenThuoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenThuoc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoaiThuoc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoaiThuoc.TenLoai)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Quay lại danh sách</a>
    </form>
</div>
